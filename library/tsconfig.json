{
  "compilerOptions": {
    "target": "ES5",
    "lib": [
      "dom",
      "dom.iterable",
      "es2015",
      "scripthost"
    ],
    "sourceMap": true,
    "typeRoots": [ "node_modules/@types/" ],
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "outDir": "dist",
    "skipLibCheck": true,
  },
  "compileOnSave": false,
  "exclude": [
    ".vscode",
    "node_modules",
    "dist"
  ]
}